@model IEnumerable<TelecomDataBase.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Clienti</h2>

<p>
    @Html.ActionLink("Creaza un client nou", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNP_CIF)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Judet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oras)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNP_CIF)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Judet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Oras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefon)
        </td>
        <td> 
           @Html.ActionLink("Details", "Details", new { id = item.Id })
           @if (Session["IsAdmin"] != null && Convert.ToBoolean(Session["IsAdmin"].ToString()) == true)
           {
                <span>|</span>
               @Html.ActionLink("Edit", "Edit", new { id = item.Id });
               <span>|</span>
               @Html.ActionLink("Delete", "Delete", new { id = item.Id });
           }
         
        </td>
       
       
    </tr>

}
</table>
